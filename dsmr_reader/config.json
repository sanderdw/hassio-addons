{
  "name": "DSMR Reader",
  "version": "0.7.5",
  "slug": "dsmr_reader",
  "description": "Used for reading the smart meter DSMR P1 port (https://dsmr-reader.readthedocs.io)",
  "arch": ["armhf", "armv7", "aarch64", "amd64"],
  "url": "https://github.com/sanderdw/hassio-addons",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "webui": "http://[HOST]:[PORT:7777]",
  "map": ["backup:rw"],
  "ports": {
    "80/tcp": 7777
  },
  "ports_description": {
    "80/tcp": "Web interface (Ingress not working yet)"
  },
  "options": {
    "DSMRREADER_ADMIN_USER": "admin",
    "DSMRREADER_ADMIN_PASSWORD": "admin",
    "DJANGO_DATABASE_NAME": "dsmrreader",
    "DJANGO_DATABASE_USER": "postgres",
    "DJANGO_DATABASE_PASSWORD": "homeassistant",
    "DJANGO_DATABASE_HOST": "77b2833f-timescaledb",
    "DJANGO_DATABASE_PORT": "5432",
    "DSMRREADER_DATALOGGER__MODE": "standalone",
    "DSMRREADER_DATALOGGER__SERIAL_PORT": "/dev/ttyUSB1",
    "DSMRREADER_DATALOGGER__INPUT_METHOD": "serial",
    "DSMRREADER_DATALOGGER__SERIAL_BAUDRATE": "115200",
    "DSMRREADER_DATALOGGER__NETWORK_HOST": "x.x.x.x",
    "DSMRREADER_DATALOGGER__NETWORK_PORT": "x",
    "DSMRREADER_DATALOGGER__SLEEP": "0.5",
    "DSMRREADER_LOGLEVEL": "WARNING"
  },
  "schema": {
    "DSMRREADER_ADMIN_USER": "str",
    "DSMRREADER_ADMIN_PASSWORD": "password",
    "DJANGO_DATABASE_NAME": "str",
    "DJANGO_DATABASE_USER": "str",
    "DJANGO_DATABASE_PASSWORD": "password",
    "DJANGO_DATABASE_HOST": "str",
    "DJANGO_DATABASE_PORT": "str",
    "DSMRREADER_DATALOGGER__MODE": "list(standalone|sender|receiver)",
    "DSMRREADER_DATALOGGER__SERIAL_PORT": "str",
    "DSMRREADER_DATALOGGER__INPUT_METHOD": "list(serial|ipv4)",
    "DSMRREADER_DATALOGGER__SERIAL_BAUDRATE": "str",
    "DSMRREADER_DATALOGGER__NETWORK_HOST": "str",
    "DSMRREADER_DATALOGGER__NETWORK_PORT": "str",
    "DSMRREADER_DATALOGGER__SLEEP": "str",
    "DSMRREADER_LOGLEVEL": "list(WARNING|INFO|DEBUG)"
  }
}